<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data class="CategoryBinding">
        <variable
                name="categoryModel"
                type="com.kotlin.learning.viewmodel.CategoryViewModel"/>
    </data>

<android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/image"
                android:src="@{categoryModel.imageUrl}"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

        <TextView
                android:id="@+id/name"
                android:text="@{categoryModel.title}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/name_sub"
                android:text="@{categoryModel.description}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>



</android.support.v7.widget.CardView>

</layout>